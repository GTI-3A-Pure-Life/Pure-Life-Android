<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notificacion_pequenya_titulo"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Título de mi notificación"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/notificacion_pequenya_contenido"
            style="@style/TextAppearance.Compat.Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contenido de la notificación" />

    </LinearLayout>

    <ImageView
        android:id="@+id/notificacion_pequenya_imagen"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_weight="2"
        android:src="@drawable/ic_launcher_foreground" />

</LinearLayout>