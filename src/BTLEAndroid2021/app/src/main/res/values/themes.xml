<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BTLEAndroid2021" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--=====================================================================================-->
        <!-- Primary brand color. -->
        <!--=====================================================================================-->
        <item name="colorPrimary">@color/verde_3abb90</item>
        <item name="colorPrimaryVariant">@color/verde_73eec0</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--=====================================================================================-->
        <!-- Secondary brand color. -->
        <!--=====================================================================================-->
        <item name="colorSecondary">@color/magenta_bb3a65</item>
        <item name="colorSecondaryVariant">@color/magenta_f16c92</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--=====================================================================================-->
        <!-- Status bar color. -->
        <!--=====================================================================================-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/verde_3abb90</item>
        <!--=====================================================================================-->
        <!-- Fuente -->
        <!--=====================================================================================-->
        <item name="android:fontFamily">@font/overpass</item>
    </style>

    <style name="ProgressBarRounded" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_bar_rounded</item>
    </style>

    <!--=========================================================================================-->
    <!-- Splash activity theme. -->
    <!--=========================================================================================-->
    <style name="SplashTheme" parent="BTLEAndroid2021">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <!--=========================================================================================-->
    <!-- Textos -->
    <!--=========================================================================================-->
    <style name="TituloDeActivity">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/overpass_bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="SubTitulo">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Texto">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextoDeError">
        <item name="android:textColor">@color/rojo_e23636</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--=========================================================================================-->
    <!-- Botones -->
    <!--=========================================================================================-->

    <style name="BotonPrimario" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>

    <style name="BotonSinBordes" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BotonEnImagen">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <!--=========================================================================================-->
    <!-- Edit text -->
    <!--=========================================================================================-->
    <style name="EditTextPrimario" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--=========================================================================================-->
    <!-- NoActionBar -->
    <!--=========================================================================================-->
    <style name="BTLEAndroid2021NoActionBar" parent="BTLEAndroid2021">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BTLEAndroid2021.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BTLEAndroid2021.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>